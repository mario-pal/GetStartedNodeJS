<h1>User Data for <%= subscriber.name %></h1>

<table class="tabel">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Zip Code</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= subscriber.name %></td>
      <td><%= subscriber.email %></td>
      <td><%= subscriber.zipCode %></td>
    </tr>
  </tbody>
</table>
<!-- Additional actions for the subscriber page-->
<div>
  <a href="/subscribers"> View all subscribers </a>
</div>
<div>
  <a href="<%= `/subscribers/${subscriber._id}/edit`%>">
    Edit subscriber details
  </a>
</div>

<div>
  <p>
    This subscriber has <%= subscriber.courses.length%> associated courses
  </p>
  <%= Subscriber.populate(subscriber, "courses").catch(error =>
  console.log(error));%>
</div>

<div>
  <a
    href="<%= `/subscribers/${subscriber._id}/delete?_method=DELETE`%>"
    onclick="return confirm('Are you sure you want to delete this record?')"
  >
    Delete
  </a>
</div>

