<h1>User Data for <%= user.fullName %></h1>

<table class="tabel">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Zip Code</th>
      <th>Password</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= user.fullName %></td>
      <td><%= user.email %></td>
      <td><%= user.zipCode %></td>
      <td><%= user.password %></td>
    </tr>
  </tbody>
</table>
<% if(user.subscribedAccounts) { %>
<h4 class="center">
  This user has a
  <a href="<%= `/subscribers/${user.subscribedAccount}` %>">
    subscribed account
  </a>
</h4>
<% } %>
<!-- Additional actions for the user page-->
<div>
  <a href="/users"> View all users </a>
</div>
<div>
  <a href="<%= `/users/${user._id}/edit`%>">
    Edit user details
  </a>
</div>
<div>
  <a
    href="<%= `/users/${user._id}/delete?_method=DELETE`%>"
    onclick="return confirm('Are you sure you want to delete this record?')"
  >
    Delete
  </a>
</div>

